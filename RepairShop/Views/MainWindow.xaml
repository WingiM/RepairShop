<Window x:Class="RepairShop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:RepairShop.ViewModels"
        xmlns:views="clr-namespace:RepairShop.Views.Controls"
        mc:Ignorable="d"
        Title="{Binding CurrentViewModel.ViewModelTitle}" Height="450" Width="800">
    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="{StaticResource SecondaryColor}" HorizontalAlignment="Stretch" Orientation="Horizontal">
            <Button x:Name="GoBackButton" Style="{StaticResource GoBackButton}" Background="{StaticResource AccentColor}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Command="{Binding GoBackCommand}">
                Назад
            </Button>
            <Image Margin="20 2 10 2" Source="/Images/tools.png" />
            <Label FontSize="18" VerticalAlignment="Center">Ремонтная мастерская</Label>
        </StackPanel>
        <TextBlock Grid.Row="0" Margin="20 0 0 0" Text="{Binding CurrentViewModel.ViewModelTitle}" x:Name="TitleTb" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Center"/>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vms:AuthorizationViewModel}">
                    <views:AuthorizationPage/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:RegisterViewModel}">
                    <views:RegistrationPage/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
